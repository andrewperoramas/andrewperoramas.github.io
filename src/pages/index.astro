---
import Layout from '~layouts/Layout.astro'
import Container from '~components/Container.astro'
import BrandLink from '~components/BrandLink.astro'
import SocialBar from '~components/SocialBar.astro'
import Avatar from '~components/Avatar.astro'
import ButtonLink from '~components/ButtonLink.astro'
import { config } from '~config'
---

<Layout title="Andrew Peroramas">
	<Container>
		<Avatar />
		<h1 class="text-3xl md:text-5xl text-brand font-bold">
			 { config.author }
		</h1>
		<p class="text-lg md:text-xl">
		I am <BrandLink /> from the Philippines. A budding hardworking web programmer whose delight was creating and developing websites to suit your needs.
		</p>
		<SocialBar />
		<ButtonLink href="/posts/">Read Posts</ButtonLink>
	</Container>
</Layout>
